# Import necessary libraries
import picamera
from flask import Flask, render_template, Response
from threading import Thread
import time

# Create a Flask app
app = Flask(__name__)

# Function to generate video frames
def generate_frames():
    with picamera.PiCamera() as camera:
        # Set the resolution (adjust based on your requirements)
        camera.resolution = (640, 480)

        # Wait for the camera to warm up
        time.sleep(2)

        # Record video indefinitely
        while True:
            video_stream = BytesIO()
            camera.capture(video_stream, format='jpeg', use_video_port=True)
            video_stream.seek(0)
            yield (b'--frame\r\n'
                   b'Content-Type: image/jpeg\r\n\r\n' + video_stream.read() + b'\r\n\r\n')
            time.sleep(0.1)  # Adjust the delay as needed

# Flask route for streaming video
@app.route('/video_feed')
def video_feed():
    return Response(generate_frames(), mimetype='multipart/x-mixed-replace; boundary=frame')

# Start Flask app
if __name__ == '__main__':
    app.run(host='0.0.0.0', port=5000, threaded=True)
